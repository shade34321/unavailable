		<property name="build" location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4\build"/>
		<property name="dist"  location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4\dist"/>
		<property name="lib"  location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4\lib"/>	<property name="dist"  location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4\dist"/>
		<property name="apidoc"  location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4\apidoc"/>
		<property name="M4"  location="C:\Users\Michael\Documents\School\College\Sophomore Year\CS 2340\SVN\M4"/>
	</target>


  <target name="prepare">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
	<mkdir dir="${apidoc}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/MyProject-${DSTAMP}.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>